{% extends 'base.html.twig' %}

{% block title %}Hello CrudController!{% endblock %}

{% block body %}
   <div class="container">
   <h2 class="page-header"> Here is CRUD, demonstration of functions in one place </h2>
   <table class="table table-striped">
       <thead>
           <tr>
               <th>#</th>
               <th>Name</th>
               <th>Crud</th>
               <th></th>
           </tr>
       </thead>
        {% for event in events %}  
           <tbody>
               <tr>
                   <th scope="row">{{event.eventId}}</th>  
                   <td>{{event.eventsName}}</td> 
                   <td> <a href="/details/{{event.eventId}}" class="btn btn-success">View</a> 
                       <a href="/edit/{{event.eventId}}" class="btn btn-default">Edit</a>
                       <a href="/delete/{{event.eventId}}" class="btn btn-danger">Delete</a>       
                   </td>
               </tr> 
           {% endfor %}
       </tbody>
   </table>
   </div>
{% endblock %}